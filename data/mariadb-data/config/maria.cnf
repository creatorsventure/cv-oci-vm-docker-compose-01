[client] 
default-character-set = utf8mb4

[mysqld]
user = mysql
# Listen on all interfaces (host networking means the container will bind to host IP)
bind-address = 0.0.0.0
port = 3306
skip-name-resolve = 1           # don't perform DNS lookups for clients
default_storage_engine = InnoDB
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# InnoDB / performance (tune based on RAM)
innodb_buffer_pool_size = 1G       # set to ~60-70% of available RAM on dedicated DB node
innodb_buffer_pool_instances = 3
innodb_log_file_size = 512M
innodb_io_capacity = 2000
innodb_flush_method = O_DIRECT
innodb_flush_log_at_trx_commit = 1

# Connections / thread tuning
max_connections = 500
thread_cache_size = 100
table_open_cache = 2000
open_files_limit = 65535

# Binary logs (useful for point-in-time recovery / replication)
log_bin = /var/lib/mysql/mysql-bin
binlog_format = ROW
expire_logs_days = 7
sync_binlog = 1

# Slow query logging
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 1

# Performance schema
performance_schema = ON

# Security
sql_mode = STRICT_TRANS_TABLES,NO_ENGINE_SUBSTITUTION,NO_AUTO_CREATE_USER

# Replication (if you enable later)
server-id = 1