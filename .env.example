# =========================================
# Example environment variables template
# Replace placeholders with real values in .env
# =========================================

# ─── General Settings ─────────────────────
TZ=Asia/Kolkata
DOCKER_DATA_ROOT=/home/ubuntu/docker-data
DOMAIN_BASE=yourdomain.tld

# ─── Traefik / Let's Encrypt ──────────────
EMAIL=you@yourdomain.tld
TRAEFIK_API_DASHBOARD=off     # 'on' for debugging, 'off' for production
TRAEFIK_LOG_LEVEL=INFO        # INFO, DEBUG, ERROR

# ─── Portainer ────────────────────────────
PORTAINER_HOST=portainer.${DOMAIN_BASE}

# ─── WireGuard (wg-easy) ──────────────────
WG_HOST=vpn.${DOMAIN_BASE}    # public IP or FQDN (e.g., vpn.yourdomain.tld)
WG_ADMIN_PASS=ChangeMeNow!123 # change this before first use

# ─── Docker resource volumes ──────────────
PORTAINER_VOLUME=portainer_data
WG_VOLUME=wg-easy
TRAEFIK_VOLUME=traefik

# ─── Optional Toggles ─────────────────────
WATCHTOWER_ENABLE=false